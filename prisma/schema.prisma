generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model User {
  id         String   @id @default(uuid())
  first_name String
  last_name  String
  email      String
  password   String
  role       Role
  contactNo  String?
  address    Address? @relation(fields: [addressId], references: [id])
  profileImg String?
  Order      Order[]
  addressId  String?

  @@map("users")
}

model Address {
  id    String @id @default(uuid())
  house String
  road  String
  ward  String
  zip   String
  city  String
  block String
  User  User[]

  @@map("addresses")
}

model Order {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  status        Status   @default(pending)
  order_number  Int      @default(autoincrement())
  createdAt     DateTime @default(now())
  delivery_time String
  service       String
  contact       String
  address       String
  order_details String
  subtotal      Int
  delivery_fee  Int
  total_amount  Int
  note          String

  @@map("orders")
}

enum Role {
  admin
  customer
}

enum Status {
  pending
  shipped
  delivered
}
